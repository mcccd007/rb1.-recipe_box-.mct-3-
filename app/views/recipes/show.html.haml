.main_content
  #recipe_top.row
    .col-md-4
      = image_tag @recipe.image.url(:medium), class: "recipe_image"
    .col-md-8
      #recipe_info
        %h1= @recipe.title
        %p.desciption= @recipe.description

  .row
    .col-md-6
      #ingredients
        %h2 Ingredients
        %ul
          - @recipe.ingredients.each do |ingredient|
            %li= ingredient.name

    .col-md-6
      #directions
        %h2 Directions
        %ul
          - @recipe.directions.each do |direction|
            %li= direction.step

= image_tag @recipe.image.url(:medium, class: "recipe_image")
%h1= @recipe.title
%p= @recipe.description

= link_to "kcaB", root_path, class: "btn btn-default"
= link_to "tidE", edit_recipe_path, class: "btn btn-default"
= link_to "eteleD", recipe_path, method: :delete, data: {confirm: "?erus era ouY" }, class: "btn btn-default"
